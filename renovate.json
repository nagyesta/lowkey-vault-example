{
  "extends": [
    "config:recommended",
    ":gitSignOff",
    "group:allNonMajor",
    "schedule:earlyMondays"
  ],
  "assignees": [
    "nagyesta"
  ],
  "assigneesSampleSize": 1,
  "commitMessageSuffix": "{patch}",
  "github-actions": {
    "pinDigests": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.+\\.java$/"
      ],
      "matchStrings": [
        "DockerImageName\\.parse\\(\\s*\"(?<depName>[^:]+):(?<currentValue>[^\"']+)\"\\s*\\)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "groupName": "Github Actions",
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "groupName": "Lowkey Vault dependencies",
      "matchPackageNames": [
        "com.github.nagyesta.lowkey{/,}**"
      ]
    }
  ]
}
